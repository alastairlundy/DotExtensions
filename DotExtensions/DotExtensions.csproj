<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <LangVersion>14</LangVersion>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <TargetFrameworks>netstandard2.0;net8.0;net9.0;net10.0;</TargetFrameworks>
    <Title>DotExtensions</Title>
    <Authors>Alastair Lundy</Authors>
    <Copyright>Copyright (c) Alastair Lundy 2020-2026</Copyright>
    <RepositoryUrl>https://github.com/alastairlundy/DotExtensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>extensions, extension-members,extension-methods, ienumerable-extensions,</PackageTags>
    <PackageReleaseNotes>* Update internal Polyfill version from 9.7.7 to 9.8.1
* Improved reliability of Safe IO Enumeration extension methods on .NET Standard 2.0
* Added Safe Logical Drive Enumeration ``DriveInfo`` static extension member methods ``SafelyEnumerateLogicalDrives`` and ``SafelyGetLogicalDrives``</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A collection of useful extension members and extension methods for .NET .</Description>
    <IncludeSymbols>true</IncludeSymbols>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Version>9.6.0-preview.1</Version>
    <PackageId>DotExtensions</PackageId>
      <IsTrimmable>true</IsTrimmable>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
      <EnableAotAnalyzer>true</EnableAotAnalyzer>
      <IsAoTCompatible>true</IsAoTCompatible>
      <PolyArgumentExceptions>true</PolyArgumentExceptions>
      <NoWarn>$(NoWarn);CS0618</NoWarn>
  </PropertyGroup>

    <ItemGroup>
    <Compile Update="Internal\Localizations\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="DotExtensions.Benchmarking"/>
    </ItemGroup>
    
  <ItemGroup>
    <EmbeddedResource Update="Internal\Localizations\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\README.md">
      <Link>README.md</Link>
      <PackagePath>README.md</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Polyfill" Version="9.8.1" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotPrimitives" Version="4.3.1" />
  </ItemGroup>
</Project>
